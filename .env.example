# ========================================
# BASIC CONFIGURATION
# ========================================
NODE_ENV=development
PORT=10000

# ========================================
# SERVER CONFIGURATION
# ========================================
# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
SERVER_HOST=0.0.0.0
# Server URL (set this for production deployment)
SERVER_URL=http://localhost:10000

# ========================================
# BACKGROUND REMOVAL (MEMORY-ONLY PROCESSING)
# ========================================
# No uploads directory needed - everything processed in memory
MAX_FILE_SIZE=15MB
MAX_FILES_PER_BATCH=5

# No cleanup needed - no file storage
AUTO_CLEANUP_ENABLED=false

# ========================================
# CLOUDINARY (TEMPLATES ONLY - NOT FOR BACKGROUND REMOVAL)
# ========================================
# Used for template management features - set your actual values
CLOUDINARY_CLOUD_NAME=dtvi1g79t
CLOUDINARY_API_KEY=139244496886279
CLOUDINARY_API_SECRET=RsPNIFw5Ma6m_hL_UctGz3DENeE


# ========================================
# SECURITY & NETWORKING
# ========================================
# CORS (set to specific domains in production)
CORS_ORIGIN=*

# ========================================
# DATABASE
# ========================================
# MongoDB connection URI
MONGODB_URI=mongodb://localhost:27017/picstar
MONGODB_DB=picstar

# ========================================
# AUTH
# ========================================
# JWT secret and expiry
JWT_SECRET=change_me_in_production
JWT_EXPIRES=7d
PASSWORD_SALT_ROUNDS=10

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/server.log

# ========================================
# RAZORPAY PAYMENT GATEWAY
# ========================================
# Get your test keys from https://dashboard.razorpay.com/app/keys
# Use test keys (rzp_test_*) for development, live keys (rzp_live_*) for production
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

